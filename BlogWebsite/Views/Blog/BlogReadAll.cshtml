@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>
	<section class="banner-bottom">
		<!--/blog-->
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					@foreach(var item in Model)
					{
					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<a href="single.html">
									<img src="~/web/images/b1.jpg" class="img-fluid" alt="">
								</a>
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
                                                <i class="far fa-calendar-alt"></i>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</a>
                                        </li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-thumbs-up"></i> 0 Likes</a>
									</li>
									<li>
										<a href="#">
											<i class="far fa-comment"></i> 0 Comments</a>
									</li>
									
								</ul>
							</div>
						</div>

						<h3>
							<a href="single.html">@item.BlogTitle </a>
						</h3>
						<p>@item.BlogContent</p>
						<a href="/Blog/Index" class="btn btn-primary read-m rounded">Blog List</a>
					
				</div>
					}

			@await Component.InvokeAsync("CommentListInBlog", new {id=ViewBag.i})
			
@* @await Html.PartialAsync("~/Views/Comment/CommentListInBlog.cshtml") *@
@await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")

		
				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						<div class="tech-btm">
							<img src="~/web/images/banner1.jpg" class="img-fluid" alt="">
						</div>
						<h4 style="text-color: #000000">Sign up to our newsletter</h4>
						@await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
					
			@await Component.InvokeAsync("CategoryList")

			@await Component.InvokeAsync("WriterLastBlog")
						
